<%= form_with model: @user, url: register_path, method: :post, data: { controller: "auth", action: "submit->auth#submitForm" } do |f| %>
  <% if @user.errors.any? %>
    <div>
      <h2>Errors:</h2>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.submit "Sign Up" %>
<% end %>
